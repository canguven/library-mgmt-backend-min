# Production Environment Variables

# Server
NODE_ENV=production
PORT=3000

# Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=library_db
DB_USER=postgres
DB_PASSWORD=postgres

# Logging
LOG_LEVEL=info

# CORS - Restrict to production domains
CORS_ORIGINS=https://inventai.com,https://api.inventai.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX=100           # Stricter in production

# Security
JWT_SECRET=your-secure-production-secret
JWT_EXPIRES_IN=1d